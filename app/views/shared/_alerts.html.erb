<div class="darker">
	<% if flash[:notice] %>
	<div class="container">
		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= flash[:notice] %>
		</div>
	</div>
	<% end %>
	<% if flash[:alert] %>
	<div class="container">
		<div class="alert alert-warning">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= flash[:alert] %>
		</div>
	</div>
	<% end %>
</div>