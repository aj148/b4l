<section>
	<div class="container">
		<h1 class="text-center">Brackets</h1>

		<div class="row">
			<div class="col-sm">
				<% if @brackets.any? %>
				<%= render "brackets_table" %>
				<% else %>
				<p class="lead text-center">
					Welcome to the Bracket's page!
				</p>
				<p class="text-center">
					<%= link_to 'Brackets', :action=>'create', :controller=>'brackets',:id=>@user %>
				</p>
				<p class="text-center">
					<%= link_to 'Donate', new_donation_path, :class => "btn btn-primary btn-lg" %>
				</p>
				<% end %>
			</div>
		</div>
	</div>
</section>
